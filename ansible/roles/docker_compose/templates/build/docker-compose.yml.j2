version: "3.9"
services:
  # Webserver
  nginx:
    image: nginx:latest
    container_name: nginx
    volumes:
      - "./conf.d:/etc/nginx/conf.d:ro"
      - "./letsencrypt/etc:/etc/letsencrypt:ro"
      - "./nginx.conf:/etc/nginx/nginx.conf:ro"
      - "./nginx/logs/:/var/log/nginx:rw"
      - "/srv/http/garuda-downloader:/var/lib/nginx/html/builds/garuda-downloader:ro"
      - "/srv/http/repos:/var/lib/nginx/html/builds/repos:ro"
    labels:
      com.datadoghq.ad.check_names: '["nginx"]'
      com.datadoghq.ad.init_configs: "[{}]"
      com.datadoghq.ad.instances: '[{"nginx_status_url": "http://%%host%%:81/nginx_status/"}]'
    tmpfs:
      - "/var/lib/nginx/html/builds/iso"
    ports:
      - "80:80"
      - "443:443"
    mem_limit: 800m
    mem_reservation: 20m
    cpus: 4.0
    restart: always

  # Synchronizing all mirrors
  syncthing:
    image: linuxserver/syncthing:latest
    container_name: chaotic-syncthing
    ports:
      - "22000:22000"
      - "21027:21027/udp"
    volumes:
      - "./syncthing:/config"
      - "/srv/http/repos:/srv/http/repos"
    environment:
      PUID: {{ puid }}
      PGID: {{ pgid }}
      TZ: {{ tz }}
    mem_limit: 1.5g
    mem_reservation: 150m
    cpus: 6.0
    restart: unless-stopped

  # Letsencrypt SSL certificates
  certbot:
    image: certbot/certbot:latest
    container_name: certbot
    volumes:
      - "./letsencrypt/etc:/etc/letsencrypt"
      - "./letsencrypt/var:/var/lib/letsencrypt"
    entrypoint: "/bin/sh -c 'trap exit TERM; sleep 10; while :; do certbot renew; sleep 12h & wait $${!}; done;'"
    mem_limit: 50m
    cpus: 0.1
    restart: always

  # Private network
  cloudflared:
    image: cloudflare/cloudflared:latest
    container_name: cloudflared
    command: tunnel run
    user: root
    volumes:
      - "./cloudflared:/root/.cloudflared"
    mem_limit: 50m
    mem_reservation: 10m
    cpus: 0.2
    restart: always
